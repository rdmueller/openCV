image: jjanzic/docker-python3-opencv
ports:
- port: 8050
  onOpen: open-preview
- port: 8888
  onOpen: open-browser
tasks:
  - command: "apt-get install -y libgl1-mesa-dev && pip install jupyter opencv-contrib-python && mkdir /home/gitpod/.jupyter && cp jupyter_notebook_config.py /home/gitpod/.jupyter/. && jupyter notebook"
